<form class="" action="/manufacturers/<%= @manufacturer.id %>" method="post">
  <label for="name">Name: </label>
  <input class="form_margin" type="text" name="name" id="name" value="<%= @manufacturer.name %>">
  <br>
  <label for="description">Description: </label>
  <input class="form_margin" type="text" name="description" id="description" value="<%= @manufacturer.description %>">
  <br>
  <label for="country">Country: </label>
  <input class="form_margin" type="text" name="country" id="country" value="<%= @manufacturer.country %>">
  <br>
  <input class ="button" type="submit" value="Update this Manufacturer">
</form>
