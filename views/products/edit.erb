<div class="wrapper">
  <div class="add">
    <form class="" action="/products/<%= @product.id %>" method="post">
      <label for="name">Name: </label>
      <input class="form_margin" type="text" name="name" id="name" value="<%= @product.name.capitalize %>" required>
      <br>
      <label for="description">Description: </label>
      <input class="form_margin" type="text" name="description" id="description" value="<%= @product.description %>">
      <br>
      <label for="stock-quantity">Stock Quantity: </label>
      <input class="form_margin" type="number" min="0" name="stock_quantity" id="stock-quantity" value="<%= @product.stock_quantity %>">
      <br>
      <label for="buying-cost">Buying Cost: </label>
      <input class="form_margin" type="number" min="0" step="any" name="buying_cost" id="buying-cost" value="<%= @product.buying_cost %>">
      <br>
      <label for="selling-price">Selling Price: </label>
      <input class="form_margin" type="number" min="0" step="any" name="selling_price" id="selling-price" value="<%= @product.selling_price %>">
      <br>
      <label for="genre">Genre: </label>
      <input class="form_margin" type="text" name="genre" id="genre" value="<%= @product.genre %>">
      <br>
      <label for="type">Type: </label>
      <input class="form_margin" type="text" name="type" id="type"value="<%= @product.type %>">
      <br>
      <label for="manufacturer-select">Select Manufacturer: </label>
      <select class="form_margin" name="manufacturers_id" id="manufacturer-select">
        <% @manufacturers.each do |manufacturer| %>
        <option value="<%= manufacturer.id %>" <% if manufacturer.id == @product.manufacturers_id %> selected="selected" <% end %>><%= manufacturer.name.capitalize %></option>
        <% end %>
      </select>
      <br>
      <label for="deactivated">Deactivated? </label>
      <select class="form_margin" name="deactivated" id="deactivated">
        <option value="no" <% if @product.deactivated == "no" %> selected="selected" <% end %> >No</option>
        <option value="yes" <% if @product.deactivated == "yes" %> selected="selected" <% end %> >Yes</option>
      </select>
      <br>
      <input class ="myButton" type="submit" value="Update this Product">
    </form>
  </div>
</div>
