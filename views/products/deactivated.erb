<div class="products">

  <h1>DEACTIVATED Products</h1>
  <p>To reactivate go to edit product</p>

  <p>filter by manufacturer</p>

  <form class="" action="/filtered-products/results" method="post">
    <select class="form_margin" name="manufacturers_id" id="manufacturer-select" required>
      <option value="" disabled selected hidden>Select Manufacturer</option>
      <% @manufacturers.each do |manufacturer| %>
      <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
      <% end %>
    </select>
    <input type="submit" value="Find Products by this Manufacturer" class="myButton">
  </form>
</div>
<table>
  <tr>
    <th>Product ID</th>
    <th>Product Name</th>
    <th>Product Description</th>
    <th>Stock Quantity</th>
    <th>Buying Cost</th>
    <th>Selling Price</th>
    <th>Markup</th>
    <th>Genre</th>
    <th>Type</th>
    <th>Manufacturer</th>
  </tr>

  <% @deactivated_products.each do |product| %>
    <tr>
      <td><a href="/products/<%= product.id %>"><%= product.id %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.name %></a> </td>
      <td><a href="/products/<%= product.id %>"><%= product.description %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.stock_quantity %><%= product.stock_status %></a></td>
      <td><a href="/products/<%= product.id %>">£ <%= '%.2f' % product.buying_cost %></a></td>
      <td><a href="/products/<%= product.id %>">£ <%= '%.2f' % product.selling_price %></a></td>
      <td><a href="/products/<%= product.id %>">£ <%= '%.2f' % product.markup %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.genre %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.type %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.manufacturers_name %></a></td>
      <td class="no-border">
        <form class="" action="/products/<%= product.id %>/edit">
          <input type="submit" value="Edit this Product">
        </form>
      </td>
    </tr>
    <% end %>
</table>
<a href="/products">Show activated products</a>
