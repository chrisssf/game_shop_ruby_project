<h1>Here is a list of products</h1>

<p>filter by manufacturer</p>

<form class="" action="/filtered-products/results" method="post">
  <select class="form_margin" name="manufacturers_id" id="manufacturer-select">
    <% @manufacturers.each do |manufacturer| %>
    <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
    <% end %>
  </select>
  <input type="submit" value="Find Products by this Manufacturer">
</form><br><br><br>

<table>
  <tr>
    <th>Product ID</th>
    <th>Product Name</th>
    <th>Product Description</th>
    <th>Stock Quantity</th>
    <th>Buying Cost</th>
    <th>Selling Price</th>
    <th>Markup</th>
    <th>Genre</th>
    <th>Type</th>
    <th>Manufacturer</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><a href="/products/<%= product.id %>"><%= product.name %></a> </td>
      <td><%= product.description %></td>
      <td><%= product.stock_quantity %><%= product.stock_status %></td>
      <td>£ <%= '%.2f' % product.buying_cost %></td>
      <td>£ <%= '%.2f' % product.selling_price %></td>
      <td>£ <%= '%.2f' % product.markup %></td>
      <td><%= product.genre %></td>
      <td><%= product.type %></td>
      <td><%= product.manufacturers_name %></td>
      <td class="no-border">
        <form class="" action="/products/<%= product.id %>/edit">
          <input type="submit" value="Edit this Product">
        </form>
      </td>
    </tr>
    <% end %>
</table>
