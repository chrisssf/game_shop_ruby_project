<div class="results">
  <p>Searched for: <b><%= @search_term %></b></p>
</div>
<table>
  <tr>
    <th>Product ID</th>
    <th>Product Name</th>
    <th>Product Description</th>
    <th>Stock Quantity</th>
    <th>Buying Cost</th>
    <th>Selling Price</th>
    <th>Markup</th>
    <th>Genre</th>
    <th>Type</th>
    <th>Manufacturer</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><a href="/products/<%= product.id %>"><%= product.id %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.name %></a> </td>
      <td><a href="/products/<%= product.id %>"><%= product.description %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.stock_quantity %><%= product.stock_status %></a></td>
      <td><a href="/products/<%= product.id %>">£ <%= '%.2f' % product.buying_cost %></a></td>
      <td><a href="/products/<%= product.id %>">£ <%= '%.2f' % product.selling_price %></a></td>
      <td><a href="/products/<%= product.id %>">£ <%= '%.2f' % product.markup %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.genre %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.type %></a></td>
      <td><a href="/products/<%= product.id %>"><%= product.manufacturers_name %></a></td>
      <td class="no-border">
        <form class="" action="/products/<%= product.id %>/edit">
          <input type="submit" value="Edit this Product">
        </form>
      </td>
    </tr>
    <% end %>
